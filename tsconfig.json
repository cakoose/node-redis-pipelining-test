{
    "extends": "@tsconfig/node18-strictest",
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noUncheckedIndexedAccess": false, // Too annoying when array indexing has type "T | undefined".
        "noUnusedLocals": false, // Let ESLint take care of this.
        "noUnusedParameters": false, // Let ESLint take care of this.
    },
    "include": [
        "src",
    ],
}
